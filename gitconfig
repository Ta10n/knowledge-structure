[merge]
	tool = vimdiff
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	dt = difftool --tool=vimdiff --no-prompt
	df = diff
	l0 = log --color --graph --decorate --pretty=oneline --abbrev-commit --date-order
	l1 = log --color --graph --decorate --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	l2 = log --all --color --graph --decorate --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	sth = stash
	re = rebase
	ru = remote update
	ft = fetch
[apply]
	whitespace = nowarn
